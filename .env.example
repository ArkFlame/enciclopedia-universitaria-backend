# Servidor
PORT=3594
NODE_ENV=production

# Base de datos
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=password
DB_NAME=db

# JWT
JWT_SECRET=tu_jwt_secret_super_seguro_cambiar_en_produccion
JWT_EXPIRES_IN=7d

# MercadoPago
MP_ACCESS_TOKEN=tu_access_token_de_mercadopago
MP_PUBLIC_KEY=tu_public_key_de_mercadopago
MP_WEBHOOK_SECRET=tu_webhook_secret

# Frontend URL (para CORS y back_urls)
FRONTEND_URL=https://tuusuario.github.io/enciclopedia-universitaria

# Almacenamiento de archivos
STORAGE_PATH=/var/www/enciclopedia/storage
BASE_URL=https://tu-backend-dominio.com

# Precio suscripción mensual en centavos (1000 ARS = 100000 centavos)
SUBSCRIPTION_PRICE=1000
SUBSCRIPTION_CURRENCY=ARS

# Límites FREE
FREE_ARTICLES_PER_MONTH=5
FREE_SUBMISSIONS_PER_HOUR=1
FREE_EDITS_PER_HOUR=1
FREE_IMAGES_PER_HOUR=3

# Límites MONTHLY
MONTHLY_SUBMISSIONS_PER_HOUR=10
MONTHLY_EDITS_PER_HOUR=10
MONTHLY_IMAGES_PER_HOUR=20

# Tamaño máximo imagen (bytes)
MAX_IMAGE_SIZE=5242880

# ── Compresión de imágenes ────────────────────────────────────────────────
# Umbral en bytes: imágenes por encima de este tamaño serán re-comprimidas
# Default: 512000 (500 KB)
COMPRESS_THRESHOLD=512000

# Calidad WebP inicial (0–100). Se reduce iterativamente si la imagen
# sigue sobre el umbral, hasta un mínimo de 40.
# Default: 82
WEBP_QUALITY=82

# ── Google OAuth ─────────────────────────────────────────────────────────────
# Create a project at https://console.cloud.google.com
# Enable the "Google Identity" API, create an OAuth 2.0 Web Client ID.
# Add your frontend URL as an Authorized JavaScript Origin.
# No client secret needed — we use the Sign In With Google button (ID token flow).
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ── Email (Resend) ────────────────────────────────────────────────────────
# Get your API key at: https://resend.com/api-keys
# Make sure to verify your domain (arkflame.com) in the Resend dashboard first.
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=Enciclopedia Universitaria <noreply@arkflame.com>

# ── IA - Nanami AI (OpenRouter) ───────────────────────────────────────────
# Obtén tu clave en: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Modelo a usar (por defecto: gratuito de Arcee AI)
AI_MODEL=arcee-ai/trinity-large-preview:free

# Máximo de tokens por respuesta del agente
AI_MAX_TOKENS=1500

# Máximo de iteraciones del agente (tool calls por request)
AI_MAX_ITERATIONS=4

# Rate limit: requests de IA por IP cada 15 minutos
AI_RATE_LIMIT=20
